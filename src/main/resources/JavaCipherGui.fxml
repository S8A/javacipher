<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<SplitPane dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="io.github.s8a.javacipher.JavaCipherGuiController">
  <items>
    <TabPane minWidth="300.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab closable="false" text="Atbash Cipher">
          <content>
            <VBox spacing="10.0">
              <children>
                <Label text="Text:" />
                <TextArea fx:id="atbashText" prefHeight="200.0" prefWidth="200.0" />
                <Button text="Execute" textAlignment="CENTER" onAction="#executeAtbashCipher" />
              </children>
              <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </padding>
            </VBox>
          </content>
        </Tab>
        <Tab closable="false" text="Caesar Cipher">
          <content>
            <VBox spacing="10.0">
              <children>
                <GridPane hgap="5.0" vgap="5.0">
                  <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                    <Label text="Mode:" textAlignment="RIGHT" />
                    <Label text="Key:" textAlignment="RIGHT" GridPane.rowIndex="1" />
                    <ChoiceBox fx:id="caesarCipherMode" prefWidth="150.0" GridPane.columnIndex="1">
                      <items>
                        <FXCollections fx:factory="observableArrayList">
                          <String fx:value="Encrypt" />
                          <String fx:value="Decrypt" />
                        </FXCollections>
                      </items>
                    </ChoiceBox>
                    <Spinner fx:id="caesarKey" GridPane.columnIndex="1" GridPane.rowIndex="1">
                      <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="25"/>
                      </valueFactory>
                    </Spinner>
                  </children>
                </GridPane>
                <Label text="Text:" />
                <TextArea fx:id="caesarText" prefHeight="200.0" prefWidth="200.0" />
                <Button text="Execute" textAlignment="CENTER" onAction="#executeCaesarCipher" />
              </children>
              <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </padding>
            </VBox>
          </content>
        </Tab>
        <Tab closable="false" text="Vigenere Cipher">
          <content>
            <VBox spacing="10.0">
              <children>
                <GridPane hgap="5.0" vgap="5.0">
                  <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                    <Label text="Mode:" textAlignment="RIGHT" />
                    <Label text="Key:" textAlignment="RIGHT" GridPane.rowIndex="1" />
                    <ChoiceBox fx:id="vigenereCipherMode" prefWidth="150.0" GridPane.columnIndex="1">
                      <items>
                        <FXCollections fx:factory="observableArrayList">
                          <String fx:value="Encrypt" />
                          <String fx:value="Decrypt" />
                        </FXCollections>
                      </items>
                    </ChoiceBox>
                    <TextField fx:id="vigenereKeyword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  </children>
                </GridPane>
                <Label text="Text:" />
                <TextArea fx:id="vigenereText" prefHeight="200.0" prefWidth="200.0" />
                <Button text="Execute" textAlignment="CENTER" onAction="#executeVigenereCipher" />
              </children>
              <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </padding>
            </VBox>
          </content>
        </Tab>
      </tabs>
    </TabPane>
    <BorderPane minWidth="300.0" prefHeight="400.0">
      <top>
        <Label text="Results:" textAlignment="CENTER" BorderPane.alignment="CENTER" />
      </top>
      <center>
        <TextArea fx:id="resultsText" editable="false" prefHeight="300.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
      </center>
      <bottom>
        <Button fx:id="clearResultsButton" text="Clear" BorderPane.alignment="CENTER" onAction="#clearResults" />
      </bottom>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </BorderPane>
  </items>
</SplitPane>
